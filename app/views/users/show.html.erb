<%= @user.username %> is logged in
<br>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>  
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>

<a href="/game/play">Play a new game</a><br>
<div class="recent-games" style="display:block;width:800px;height:450px; overflow: scroll;">
	<% @user_games.each do |game|%>
		<div style="background-color:lightgrey;display:inline-block;float:left;margin:1%" class="game-entry">
			<div class="game-date">
				<p>Game ID: <%= game.id %> </p>
				<p>Player: <%= User.get_username_of(game[:user_id]) %> </p>
				<p>Created at: <%= game.created_at %> </p>
				<p>Game time: <%= number_with_precision(game.game_time, precision: 2) %> seconds </p>
				<p>Score: <%= number_with_precision(game.score, precision: 0) %> </p>
				<p>Damage Taken: <%= number_with_precision(game.damage_taken, precision: 0) %> </p>
				<p>Damage Inflicted: <%= number_with_precision(game.damage_inflicted, precision: 0) %> </p>
				<p>Laser Time: <%= number_with_precision(game.laser_time, precision: 0) %> </p>
				<p>Super laser Time: <%= number_with_precision(game.slaser_time, precision: 0) %> </p>
				<p>Machine Gun Time: <%= number_with_precision(game.mg_time, precision: 0) %> </p>
				<p>HE Rocket time: <%= number_with_precision(game.rocket_time, precision: 0) %> </p>
				<p>Mine time: <%= number_with_precision(game.mine_time, precision: 0) %> </p>
			</div>
		</div>
	<% end %>
</div>