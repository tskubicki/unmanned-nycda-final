<h1>Admin#users</h1>
<p>Find me in app/views/admin/users.html.erb</p>

<%= link_to "Create new user", new_user_path %>

<%= form_tag(admin_users_path, :method => "get") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
      <%= submit_tag :search_users %>
<% end %>

<% @users.each do |u| %>
	<p>
		<%= image_tag u.avatar.url(:thumb) %>
		<%= u.username %>
		<%= u.email %>
		<%= link_to "Go to Profile", user_path(u.id) %>
		<%= link_to "Change", user_path(u.id) %>
		<%= link_to "Destroy",
			 user_path(u.id),
			 method: :delete,
			 data: { confirm: "Destroy #{u.username}? This cannot be undone!" } %>
	</p>
<% end %>